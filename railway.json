{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "/backend/**"
    ],
    "nixpacksConfig": {
      "startCommand": "gunicorn ngo_project.wsgi"
    }
  },
  "deploy": {
    "startCommand": "gunicorn ngo_project.wsgi",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}